extends ../layout

block content
	.container
		br
		form.form-signin(method="POST",action="/user/signin")
			label.sr-only(for="signinName") 注册邮箱
			input#signinName(name="user[name]" type="email" class="form-control" placeholder="注册邮箱" required autofocus)
			label.sr-only(for="signinPassword") 用户密码
			input#signinPassword(name="user[password]" type="password" class="form-control" placeholder="用户密码" required)
			.checkbox
				label 
					input(type="checkbox" value="remember-me")
					span 记住我 
			button.btn.btn-lg.btn-primary.btn-block(type="submit") 登录
