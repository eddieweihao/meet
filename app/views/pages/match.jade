extends ../layout

block content
	.container
		h5 用户匹配
		br
		.match-box
			.fails
				span(class="glyphicon glyphicon-remove")
			.match-user
				img(src="/upload/1.jpg" class="image-match")
			.pass
				span(class="glyphicon glyphicon-heart")
		.user-detail
			br
			table(class="table" style="table-layout:fixed;")
				tr
					td 用户名
					th #{userinfo.name}
				tr
					td 昵称
					th #{userinfo.nickName}
				tr
					td 性别
					th #{userinfo.sex}
				tr
					td 收到的赞
					th #{userinfo.stars}
				tr
					td 校友认证
					th #{userinfo.auth}
				tr
					td 年级
					th #{userinfo.grade}
				tr
					td 学院
					th #{userinfo.colleg}
				tr
					td 年龄
					th #{userinfo.age}
				tr
					td 身高(cm)
					th #{userinfo.height}
				tr
					td 体重(kg)
					th #{userinfo.weight}
				tr
					td 联系方式
					th(style="word-wrap:break-word;") #{userinfo.contact}
				tr
					td 自我介绍
					th(style="word-wrap:break-word;") #{userinfo.selfIntroduction}
		